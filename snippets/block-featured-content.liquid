<section class="content-feature content-feature--direction-{{ block.settings.direction }} content-feature--layout-{{ block.settings.layout }} background--{{ block.settings.background }}">
  <div class="content-feature__container">
    <div class="content-feature__image">
      <img src="{{ block.settings.image | img_url: "650x830", crop: 'center', scale: 2 }}" alt="{{ block.settings.title }}"">
      <div class="content-feature___author">{{ block.settings.author }}</div>
    </div>
    <div class="content-feature__content">
      <h2 class="content-feature__content__title">{{ block.settings.title }}</h2>
      <div class="content-feature__content__body">{{ block.settings.content }}</div>
      <a class="arrow-link" href="{{block.settings.link}}">{% include 'arrow.svg' %}{{ block.settings.cta }}</a>
    </div>
  </div>
</section>