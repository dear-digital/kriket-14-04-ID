<section class="content-feature content-feature--direction-{{ section.settings.direction }} content-feature--layout-{{ section.settings.layout }} background--{{ section.settings.background }}">
  <div class="content-feature__container">
    <div class="content-feature__image">
      <img src="{{ section.settings.image | img_url: "650x830", crop: 'center', scale: 2 }}" alt="{{ section.settings.title }}"">
    </div>
    <div class="content-feature__content">
      <h2 class="content-feature__content__title">{{ section.settings.title }}</h2>
      <div class="content-feature__content__body">{{ section.settings.content }}</div>
      <a class="arrow-link" href="{{section.settings.link}}">{% include 'arrow.svg' %}{{ section.settings.cta }}</a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Feature Content",
  "settings": [
    {
      "id": "title",
      "type": "text",
      "label": "Title",
      "default": "I'm the title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam in neque quis sem pretium placerat.</p>"
    },
    {
      "type": "text",
      "id": "cta",
      "label": "CTA",
      "default": "Learn more"
    },
    {
      "type": "url",
      "id": "link",
      "label": "CTA - Target"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "direction",
      "label": "Direction",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "reverse",
          "label": "Reverse"
        }
      ],
      "default": "normal"
    },
     {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        {
          "value": "normal",
          "label": "Normal"
        },
        {
          "value": "compact",
          "label": "Compact"
        }
      ],
      "default": "normal"
    },
    {
      "type": "select",
      "id": "background",
      "label": "Background Color",
      "options": [
        {
          "value": "green",
          "label": "Green"
        },
        {
          "value": "yellow",
          "label": "Yellow"
        },
        {
          "value": "orange",
          "label": "Orange"
        },
        {
          "value": "blue",
          "label": "Blue"
        },
        {
          "value": "pink",
          "label": "Pink"
        },
        {
          "value": "brown",
          "label": "Brown"
        },
        {
          "value": "tan",
          "label": "Tan"
        }
      ],
      "default": "pink"
    }
  ],
  "presets": [
    {
      "name": "Feature Content",
      "category": "Homepage Sections"
    }
  ]
}

{% endschema %}
