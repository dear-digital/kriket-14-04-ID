<section class="content-grid foreground--{{ section.settings.color }}">
  <div class="content-grid__inner">
    <h2 class="content-grid__title">{{ section.settings.title }}</h2>
    <div class="content-grid__tiles">
      {% for block in section.blocks %}
        {% include 'tile' %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured Content",
  "blocks": [
    {
      "type": "block",
      "name": "Tile",
      "settings": [
        {
          "id": "title",
          "type": "text",
          "label": "Title",
          "default": "I'm the title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nam in neque quis sem pretium placerat.</p>"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "This is the main title!"
    },
    {
      "type": "select",
      "id": "color",
      "label": "Color",
      "options": [
        {
          "value": "green",
          "label": "Green"
        },
        {
          "value": "yellow",
          "label": "Yellow"
        },
        {
          "value": "orange",
          "label": "Orange"
        },
        {
          "value": "blue",
          "label": "Blue"
        },
        {
          "value": "pink",
          "label": "Pink"
        },
        {
          "value": "brown",
          "label": "Brown"
        },
        {
          "value": "tan",
          "label": "Tan"
        }
      ],
      "default": "orange"
    }
  ]
}
{% endschema %}
